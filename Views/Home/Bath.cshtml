                        <header id="box3">
                            Dental          
                            <button id="button">Quick Details</button>
                            <input id="button" type="button" value="Learn Alternatives" onclick="@("window.location.href='" + @Url.Action("Dental", "Bathroom") + "'");" />
                        </header>
                    </div>
            </div>
        </div>

        <div class="col-sm">
            <div class="polaroid">
                <img src="https://upload.wikimedia.org/wikipedia/commons/c/c1/Shari-sirotnak-oM5YoMhTf8E-unsplash.jpg" alt="Styling" style="width:100%">
                <div class="caption">
                    <header id="box">
                        Styling
                        <button id="button">Quick Details</button>
                        <input id="button" type="button" value="Learn Alternatives" onclick="@("window.location.href='" + @Url.Action("Styling", "Bathroom") + "'");" />
                    </header>
                </div>
